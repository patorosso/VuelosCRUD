@model VuelosCRUD.Models.Vuelo
<h2>Editar vuelo</h2>

<div class="col-sm-5">
    <form asp-action="Modificacion" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="NumeroDeVuelo" class="form-label mt-4" style="font-weight: bold;">Vuelo:</label>
            <input asp-for="NumeroDeVuelo" class="form-control" placeholder="Ingresa número de vuelo. Ej: AZ 681, BA 2490" />
            <span asp-validation-for="NumeroDeVuelo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Horario" class="form-label mt-4" style="font-weight: bold;">Horario Llegada:</label>
            <input asp-for="Horario" class="form-control" type="time" />
            <span asp-validation-for="Horario" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-top: 30px;">
            <div class="form-check">
                <input asp-for="Demorado" class="form-check-input" type="checkbox" id="flexCheckDefault">
                <label asp-for="Demorado" class="form-check-label" for="flexCheckDefault">Demorado</label>
                <span asp-validation-for="Demorado" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group" style="margin-top: 30px;">
            <button type="submit" class="btn btn-primary">Editar</button>
        </div>
    </form>
</div>